<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/txtMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#8D554C4C"
        android:text="Email atau nama pengguna"
        android:minHeight="48dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:background="@drawable/kotak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMasuk" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:background="@drawable/kotak"
        android:minHeight="48dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Kata Sandi"
        android:textColor="#8D554C4C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="LUPA?"
        android:textColor="#66554C4C"
        android:textSize="15dp"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="300dp" />

    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
     android:background="@drawable/kotakmasuk"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="MASUK"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="ExtraText,MissingConstraints">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#E7E7E7" />
        Â </LinearLayout>


    <TextView
        android:id="@+id/textBawahButtonMasuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Dengan masuk ke Duolingo, kamu menyutujui "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFacebook" />


    <TextView
        android:id="@+id/textKetentuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Ketentuan"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBawahButtonMasuk" />

    <TextView
        android:id="@+id/textSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="dan"
        app:layout_constraintStart_toEndOf="@+id/textKetentuan"
        app:layout_constraintTop_toBottomOf="@+id/textBawahButtonMasuk" />

    <TextView
        android:id="@+id/textKebijakanPrivasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Kebijakan Privasi"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textSeparator"
        app:layout_constraintTop_toBottomOf="@+id/textBawahButtonMasuk" />

    <TextView
        android:id="@+id/textBawahInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Situs ini dilindungi oleh reCAPTCHA Enterprise, dan "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBawahButtonMasuk" />

    <TextView
        android:id="@+id/textKebijakanPrivasi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Kebijakan Privasi"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textBawahInfo2"
        app:layout_constraintTop_toTopOf="@+id/textBawahInfo2" />

    <TextView
        android:id="@+id/textSeparator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text=" serta "
        app:layout_constraintTop_toTopOf="@+id/textBawahInfo2"
        app:layout_constraintStart_toEndOf="@+id/textKebijakanPrivasi2" />

    <TextView
        android:id="@+id/textKetentuanLayanan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ketentuan Layanan"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/textBawahInfo2"
        app:layout_constraintStart_toEndOf="@+id/textSeparator2" />

    <TextView
        android:id="@+id/textBawahInfoLanjutan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=" Layanan Google berlaku."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textKetentuanLayanan2"
        app:layout_constraintTop_toTopOf="@+id/textBawahInfo2" />

    <TextView
        android:id="@+id/textBelumPunyaAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Belum punya akun?"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBawahInfoLanjutan" />

    <TextView
        android:id="@+id/textDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="DAFTAR"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textSeparator"
        app:layout_constraintTop_toBottomOf="@+id/textBawahInfoLanjutan" />

    <TextView
        android:id="@+id/atau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:text="ATAU"
        android:textColor="#2C000000"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMasuk"
        tools:ignore="MissingConstraints,TextSizeCheck"
        tools:layout_editor_absoluteX="188dp" />

    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:background="#E7E7E7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMasuk"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:background="#E7E7E7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMasuk"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnFacebook"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/buttongooglefacebook"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="FACEBOOK"
        android:textColor="#3F51B5"
        android:drawableStart="@drawable/facebook"
        android:height="5dp"
        android:width="5dp"
        app:layout_constraintEnd_toStartOf="@+id/btnGoogle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atau" />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:width="5dp"
        android:height="5dp"
        android:background="@drawable/buttongooglefacebook"
        android:drawableStart="@drawable/googlelogo"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="GOOGLE"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@+id/btnFacebook"
        app:layout_constraintTop_toBottomOf="@+id/atau" />

    <TextView
        android:layout_width="5dp"
        android:layout_height="5dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>