<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer layer (stroke/border) -->
    <item>
        <shape>
            <solid android:color="#433F51B5" /> <!-- Warna luaran (biasanya sama dengan warna latar belakang) -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Inner layer (background) -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape>
            <solid android:color="#03A9F4" /> <!-- Warna latar belakang -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>





